# Server Configuration
NODE_ENV=development
PORT=5001
API_VERSION=v1

# Database
DATABASE_URL=mongodb://localhost:27017/healthcare_db
DB_NAME=healthcare_db

# Redis (Session & Cache)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Secrets (Generate strong random strings)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-token-key-change-this
JWT_EXPIRE=1h
JWT_REFRESH_EXPIRE=7d

# Encryption (Generate 32-byte hex key: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
ENCRYPTION_KEY=your-32-byte-hex-encryption-key-here
ENCRYPTION_ALGORITHM=aes-256-gcm

# MFA Configuration
MFA_ISSUER=Secure Healthcare Platform
MFA_WINDOW=1

# Session Configuration
SESSION_SECRET=your-session-secret-change-this
SESSION_TIMEOUT=3600000
SESSION_MAX_AGE=86400000

# Security
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=900000
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL=true

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESS=false

# CORS
CORS_ORIGIN=http://localhost:3001
CORS_CREDENTIALS=true

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Email (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password

# Anomaly Detection
ANOMALY_DETECTION_ENABLED=true
ANOMALY_THRESHOLD=0.7

# Compliance
AUDIT_LOG_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=2555
DATA_RETENTION_DAYS=2555

# Cloud Storage (Optional - AWS S3)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# Monitoring (Optional)
ENABLE_METRICS=true
METRICS_PORT=9090
